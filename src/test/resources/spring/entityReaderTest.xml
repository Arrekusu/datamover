<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="reader" class="com.arekusu.datamover.reader.DBEntityReader" />
    <bean id="mockDAO" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg name="classToMock" value="com.arekusu.datamover.dao.SimpleDBDAO"/>
    </bean>
    <bean id="jdbcTemplate" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg name="classToMock" value="org.springframework.jdbc.core.JdbcTemplate"/>
    </bean>
</beans>