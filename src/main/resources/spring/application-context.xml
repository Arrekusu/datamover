<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="spring-jdbc-context.xml" />

    <context:annotation-config />
    <context:component-scan base-package="com.arekusu.datamover" />

    <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <constructor-arg name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="simpleDBDAO" class="com.arekusu.datamover.dao.SimpleDBDAO">
    </bean>

    <bean id="fileReader" class="com.arekusu.datamover.reader.XMLTransportFileReader" />
    <bean id="entityReader" class="com.arekusu.datamover.reader.DBEntityReader" />
    <bean id="entityWriter" class="com.arekusu.datamover.writer.XMLFileEntityWriter" />
    <bean id="writer" class="com.arekusu.datamover.writer.DBEntityWriter" />
</beans>